<h2>Available Templates</h2>

<table class="table">
  <thead>
    <th>Template</th>
    <th></th>
  </thead>
  <%= for template <- @email_templates do %>
    <tr>
      <td><%= template %></td>
      <td><%= link "Send",
        to: email_path(@conn, :send, %{"template" => template}),
        method: :post,
        class: "btn btn-primary" %>
      <%= link "Preview",
        to: email_path(@conn, :preview, %{"template" => template}),
        class: "btn btn-warning" %>
      </td>
    </tr>
  <% end %>
</table>

